<!-- views/admin/dashboard.ejs -->
<% title = 'Admin Dashboard' %>
<div class="container py-4">
  <div class="text-center mb-4">
    <h2 class="h3">Welcome, <%= user.username %>!</h2>
    <p class="lead">Here you can manage products, categories, orders, and more.</p>
  </div>

  <div class="row g-3">
    <div class="col-12 col-sm-6 col-lg-4">
      <a href="/admin/brands" class="btn btn-primary btn-lg w-100">Manage Brands</a>
    </div>
    <div class="col-12 col-sm-6 col-lg-4">
      <a href="/admin/categories" class="btn btn-primary btn-lg w-100">Manage Categories</a>
    </div>
    <div class="col-12 col-sm-6 col-lg-4">
      <a href="/admin/products" class="btn btn-primary btn-lg w-100">Manage Products</a>
    </div>
    <div class="col-12 col-sm-6 col-lg-4">
      <a href="/admin/orders" class="btn btn-primary btn-lg w-100">Manage Orders</a>
    </div>
    <div class="col-12 col-sm-6 col-lg-4">
      <a href="/admin/users" class="btn btn-primary btn-lg w-100">Manage Users</a>
    </div>
  </div>
</div>
